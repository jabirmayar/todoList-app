<%- include("header") %>

<div class="login-signup">

  <a class="btn btn-outline-info" href="/">Home</a>
  <a class="btn btn-outline-info" href="/signup">Sign Up</a>

</div>

  <div class="row form_f">
          <div class="col col-lg-6 col-lg-offset-3">
            <div class="row card text-center " id="form-div">

              <div class="card-body">
                <h5 class="card-title">Sign In Form</h5>
                <form class="form-horizontal" method="POST"  action="/login">
                  <fieldset>
                    <div class="form-group">
                      <div class="col-lg-12"> <input type="text" class="form-control" oninvalid="this.setCustomValidity('Please enter a username without spaces')"  pattern="^\S+$" value="<%= userN %>" name="username" placeholder="Username" required /> </div>
                    </div>
                    <div class="form-group">
                      <div class="col-lg-12"> <input type="password" class="form-control" value="<%= password %>"  name="password" placeholder="Password" rows="4" required></textarea> </div>
                    </div>
                    <div class="form-group">
                          <h5 style="color: red;"><%= error %></h5>
                        <button type="submit" class=" btn btn-outline-primary">Sign In</button>

                    </div>
                  </fieldset>

                </form>


              </div>

            </div>
          </div>

        </div>



